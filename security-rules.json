{
  "rules": {
    "chats": {
      "$chatId": {
        ".read": "auth != null || root.child('chatKeys').child($chatId).exists()",
        ".write": "auth != null || (newData.hasChildren(['text', 'sender']) && newData.child('sender').val() == 'user')",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['text', 'sender', 'timestamp'])"
          }
        },
        "metadata": {
          ".write": "auth != null"
        }
      }
    },
    "chatKeys": {
      "$chatId": {
        ".read": false,
        ".write": "auth != null"
      }
    }
  }
}