{
  "rules": {
    "chats": {
      "$chatId": {
        ".read": "root.child('chatKeys').child($chatId).exists()",
        ".write": "auth != null || (newData.hasChildren(['text', 'sender', 'timestamp']) && newData.child('sender').val() == 'user')",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['text', 'sender', 'timestamp']) && (newData.child('sender').val() == 'user' || newData.child('sender').val() == 'agent')"
          }
        }
      }
    },
    "chatKeys": {
      "$chatId": {
        ".read": true,
        ".write": "auth != null"
      }
    }
  }
}
