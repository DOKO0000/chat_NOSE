{
  "rules": {
    "chats": {
      "$chatId": {
        ".read": "auth != null || root.child('chatKeys').child($chatId).exists()",
        ".write": "auth != null",
        
        "messages": {
          "$messageId": {
            ".read": "auth != null || root.child('chatKeys').child($chatId).exists()",
            ".write": "auth != null || (newData.hasChildren(['text', 'sender', 'timestamp']) && newData.child('sender').val() == 'user')",
            ".validate": "newData.hasChildren(['text', 'sender', 'timestamp']) && (newData.child('sender').val() == 'user' || newData.child('sender').val() == 'agent')"
          }
        },
        
        "metadata": {
          ".read": "auth != null || root.child('chatKeys').child($chatId).exists()",
          ".write": "auth != null || newData.child('lastActivity').exists() || newData.child('status').exists()"
        }
      }
    },
    
    "chatKeys": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
